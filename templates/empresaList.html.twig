{% extends 'base.html.twig' %}
{% block title %} {{ titulo}} {% endblock %}
{% block body %}
<h1> {{ titulo }}</h1>
<a href = "{{ path('add_empresa') }}" class = "btn btn-primary">+ Adicionar</a>
<table class="table">
    <thead>
        <tr>
            <td>#</td>
            <td>Razão Social</td>
            <td>Fantasia</td>
            <td>Ações</td>
        </tr>
    </thead>
    <tboby>
        {% for empresa in empresas %}
            <tr>
                <td>{{ empresa.id }}</td>
                <td>{{ empresa.razaosocial }}</td>
                <td>{{ empresa.fantasia }}</td>
                <td>
                    <a href = "{{ path('edit_empresa',{id:empresa.id}) }}" class="btn btn-primary">Editar</a>
                    <a href = "{{ path('excluir_empresa',{id:empresa.id}) }}" class="btn btn-primary">Excluir</a>
                </td>
            </tr>
        {% endfor %}
    </tboby>
</table>
{% endblock body %}
