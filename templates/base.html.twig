                {% if is_granted('ROLE_USER')%}
                <div class= "collapse navbar-collapse">
                    <ul class = "navbar-nav">
                        <li class = "nav-item">
                            <a class="nav-link" href="{{ path ('lista_empresa')}}">EMPRESAS</a>
                        </li>
                        <li class = "nav-item">
                            <a class="nav-link" href="{{ path ('lista_socio')}}">SOCIOS</a>
                        </li>
                        <li class = "nav-item">                            
                            <a class="nav-link" href="/logout">LOGOUT</a>                            
                        </li>
                    </ul>
                </div>
                <div class = "col-md-3 text-end">
                    <span style = "color: #FFF;">Usuário: {{ app.user.nome}}</span>
                </div>
                {% endif %}
           </div> 
        </nav>
        <div class="container">
        {% block body %}{% endblock %}
        </div>
    </body>
</html>
